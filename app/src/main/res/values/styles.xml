<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="doodle_MyAudioWave">
        <attr name="doodle_border_width" format="dimension" />
        <attr name="doodle_AFTopColor" format="color" />
        <attr name="doodle_top_color" format="color"/>
        <attr name="doodle_AFDownColor" format="color"/>
        <attr name="doodle_AFCount" format="integer"/>
        <attr name="doodle_AFWidth" format="integer"/>
        <attr name="doodle_AFSpeed" format="integer"/>
        <attr name="doodle_AFOffset" format="integer"/>
    </declare-styleable>

</resources>
