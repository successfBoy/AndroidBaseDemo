<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scribble_color_bar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/doodle_color_bar_background"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/color_red"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/doodle_scribble_bar_circle_red_style" />

    <ImageView
        android:id="@+id/color_blue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/doodle_scribble_bar_circle_blue_style" />

    <ImageView
        android:id="@+id/color_green"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/doodle_scribble_bar_circle_green_style" />

    <ImageView
        android:id="@+id/color_orange_dark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/doodle_scribble_bar_circle_orange_dark_style" />

    <ImageView
        android:id="@+id/color_orange_light"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/doodle_scribble_bar_circle_orange_light_style" />

    <ImageView
        android:id="@+id/color_pink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/doodle_scribble_bar_circle_pink_style" />

    <ImageView
        android:id="@+id/color_purple"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/doodle_scribble_bar_circle_purple_style" />

    <ImageView
        android:id="@+id/color_black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/doodle_scribble_bar_circle_black_style" />

</LinearLayout>